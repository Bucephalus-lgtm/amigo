<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/s"
    app:cardCornerRadius="@dimen/xxs"
    app:cardElevation="@dimen/s"
    android:layout_marginVertical="@dimen/xxs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/xxs">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="fitXY"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placeholder Name"
            android:layout_toEndOf="@id/product_img"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/s"
            android:layout_marginStart="@dimen/xs"
            android:textSize="@dimen/xm"
            android:fontFamily="@font/merriweather_medium"/>

        <TextView
            android:id="@+id/product_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:text="Fruit"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/l"
            android:fontFamily="@font/merriweathe_light"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_id"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_price"
            android:textSize="@dimen/xm"
            android:text="1000"
            android:fontFamily="@font/merriweather_medium"
            android:layout_toEndOf="@id/product_img"
            android:layout_below="@id/product_type"
            android:layout_marginStart="@dimen/s"/>





    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>